---
export interface Parqueadero {
    imgPortada?: string | null;  
    Nombre?: string | null;
    Direccion?: string | null;
    TarifaHora?: number | null;
    TarifaDia?: number | null;
    TarifaMensual?: number | null;
}

const { parqueaderos } = Astro.props;
console.log("Datos de parqueaderos:", parqueaderos);
---

<div class="w-full bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold mb-4 flex items-center">
        <span class="material-icons mr-2"></span>
        Parqueaderos Visitados
    </h2>

    <div class="space-y-6">
        {parqueaderos.length > 0 ? (
            parqueaderos.map((parqueadero: Parqueadero) => (
                <div class="flex flex-col md:flex-row items-start space-y-4 md:space-y-0 md:space-x-4">
                    {parqueadero.imgPortada ? (
                        <img src={parqueadero.imgPortada} alt={parqueadero.Nombre || "Imagen de parqueadero"} class="w-24 h-24 md:w-32 md:h-32 rounded-lg object-cover" />
                    ) : (
                        <div class="w-24 h-24 md:w-32 md:h-32 rounded-lg bg-gray-200 flex items-center justify-center">
                            <span>Cargando imagen...</span>
                        </div>
                    )}
                    <div>
                        <h3 class="text-xl font-semibold">{parqueadero.Nombre || "Nombre no disponible"}</h3>
                        <p>Dirección: {parqueadero.Direccion || "Dirección no disponible"}</p>
                        <p>Tarifa Hora: {parqueadero.TarifaHora ? `$${parqueadero.TarifaHora}` : "Tarifa no disponible"}</p>
                        <p>Tarifa Día: {parqueadero.TarifaDia ? `$${parqueadero.TarifaDia}` : "Tarifa no disponible"}</p>
                        <p>Tarifa Mensual: {parqueadero.TarifaMensual ? `$${parqueadero.TarifaMensual}` : "Tarifa no disponible"}</p>
                    </div>
                </div>
            ))
        ) : (
            <p>No se encontraron parqueaderos.</p>
        )}
    </div>
</div>
